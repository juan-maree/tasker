<div class="task-show">
    <%= @task.title %>
    <%= @task.due_date %>
    <div class="description">
        <%= @task.description %>
    </div>
    <div class="delete">
        <% if current_user.tasks.exists?(@task.id) %>
            <%= link_to task_path(@task), method: :delete, data: {confirm: 'Are you sure?'} do %>
                <%= fa_stacked_icon "trash"%>
            <% end %>
        <% end %>
    </div>
</div>